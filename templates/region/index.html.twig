{% extends 'base.html.twig' %}
{% block body %}


	<div id="colorlib-rooms" class="colorlib-light-grey" style="background-image : url('{{ asset('assets/images/img_bg_3.jpg')}}');background-repeat:no-repeat;background-position:center center; width:100%;">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3 text-center colorlib-heading animate-box">
					<h2>Les regions disponibles</h2>
				</div>
			</div>
		</div>
	</div>
	
	<br><br><br>
	
	<div class="row text-center">
    	<div class="col-md-10 col-md-offset-1 animate-box">
    		<button class="btn btn-success"><a href="{{ path('region_new') }}" style="color:black; font-size:18px;">Créer une nouvelle région</a></button>
    	</div>
	</div>
	
	<br><br><br>

	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8">
			<table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Présentation</th>
                <th>Pays</th>
                <th>Interagir</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.name }}</td>
                <td>{{ region.presentation }}</td>
                <td>{{ region.country }}</td>
                <td>
                    <a href="{{ path('region_show', {'id': region.id}) }}"style="color: blue; font-size: 16px;">Aperçu&nbsp;&nbsp;&nbsp;</a>
                    {% if is_granted('ROLE_ADMIN')  %}
                    <a href="{{ path('region_edit', {'id': region.id}) }}"style="color: green; font-size: 16px;">Editer</a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune occurence trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

		</div>
		<div class="col-lg-2"></div>
	</div>
{% endblock %}
