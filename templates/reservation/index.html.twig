{% extends 'base.html.twig'%}

{% block body %}


	<div id="colorlib-rooms" class="colorlib-light-grey" style="background-image : url('{{ asset('assets/images/img_bg_3.jpg')}}');background-repeat:no-repeat;background-position:center center; width:100%;">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3 text-center colorlib-heading animate-box">
					<h2>Les réservation  </h2>
				</div>
			</div>
		</div>
	</div>

 
 	<br><br><br>
 
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8">
			<table class="table table-hover">
        <thead>
            <tr>
                <th>Date de début de séjour</th>
                <th>Date de fin de séjour</th>
                <th>Confirmé</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.beginDate ? reservation.beginDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.confirmed ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">Aperçu</a>
                </td>
                <td>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune occurence trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
		<div class="col-lg-2"></div>
	</div>
{% endblock %}
